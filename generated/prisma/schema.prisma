generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  fullName    String?
  email       String   @unique
  image       String
  password    String
  phoneNumber String
  profile     Profile?
  role        Role
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Profile {
  id      String  @id @default(uuid())
  name    String
  phone   String?
  company String?
  userId  Int     @unique
  user    User    @relation(fields: [userId], references: [id])
}

enum Role {
  ADMIN
  CLIENT
}
